<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Review
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
      <span>({{post.review_text}})</span>
    </div>
    <div>
      Posted by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.review.length}} {{format_plural "review" post.review.length}}</a>
    </div>
    <button type="submit">Save Review</button>
    <button type="button" class="delete-post-btn">Delete Review</button>
  </form>
</article>

{{> reviews post.reviews}}

<script src="/javascript/edit-review.js"></script>
<script src="/javascript/delete-review.js"></script>