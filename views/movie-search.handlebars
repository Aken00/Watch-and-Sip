
{{#each movieResults}}
<div class="card" style="width: 18rem;">
    {{#if this.poster_path}}
  <img src="https://image.tmdb.org/t/p/original/{{this.poster_path}}" class="card-img-top" alt="...">
  {{/if}}
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <p class="card-text">{{this.overview}}</p>
  </div>
</div>
{{/each}}
