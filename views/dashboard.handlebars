<section>
  <h2>Reviews</h2>
<p>Create a review of your favorite movie/tv show</p>
  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-review">Review</label>
      <input type="text" id="post-review" name="post-review" />
    </div>
    <button type="submit" id="add-review" class="btn">add Review</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Reviews</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Review</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-review.js"></script> --}}


