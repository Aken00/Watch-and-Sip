<section>
  <h2>Create a Review</h2>


  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-review">Review</label>
      <input type="text" id="review-text" name="review-text" />
    </div>
    <button type="submit" class="btn">add Review</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <div class="col-12 col-md-6">
  <h2>Your Reviews</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}  
      
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Review</a>
    </li>
    {{/each}}
  </ol>
  </div>
</section>
{{/if}}

<script src="/javascript/add-review.js"></script>